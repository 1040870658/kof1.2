<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_height="wrap_content"
        android:id="@+id/tv_data_rank"
        android:gravity="center"
        android:textColor="@color/white"/>
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_toRightOf="@id/tv_data_rank"
        android:id="@+id/iv_data_team"
        android:gravity="center"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_data_mark_num"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_data_score_num"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_toLeftOf="@id/tv_data_mark_num"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_data_loose_num"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_toLeftOf="@id/tv_data_score_num"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_data_draw_num"
        android:layout_toLeftOf="@id/tv_data_loose_num"
        android:gravity="center"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_data_win_num"
        android:layout_toLeftOf="@id/tv_data_draw_num"
        android:gravity="center"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/tv_data_win_num"
        android:id="@+id/tv_data_match_num"
        android:gravity="center"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_data_team"
        android:id="@+id/tv_data_team"
        android:gravity="center"
        android:textColor="@color/white"/>

</RelativeLayout>