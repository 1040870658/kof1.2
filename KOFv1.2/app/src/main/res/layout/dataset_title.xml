<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="5dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="球队"
        android:gravity="center"
        android:id="@+id/tv_title_team"
        android:layout_alignParentLeft="true"
        android:textSize="@dimen/small_text"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/small_text"
        android:text="积分"
        android:id="@+id/tv_title_mark_num"
        android:gravity="center"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_title_score_num"
        android:text="进/失"
        android:gravity="center"
        android:textSize="@dimen/small_text"
        android:layout_toLeftOf="@id/tv_title_mark_num"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/small_text"
        android:layout_toLeftOf="@id/tv_title_score_num"
        android:id="@+id/tv_title_loose_num"
        android:text="负"
        android:gravity="center"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/small_text"
        android:layout_toLeftOf="@id/tv_title_loose_num"
        android:id="@+id/tv_title_draw_num"
        android:text="平"
        android:gravity="center"
        android:textColor="@color/white"/>
    <TextView
        android:textSize="@dimen/small_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_toLeftOf="@id/tv_title_draw_num"
        android:id="@+id/tv_title_win_num"
        android:text="胜"
        android:textColor="@color/white"/>
    <TextView
        android:textSize="@dimen/small_text"
        android:layout_toLeftOf="@id/tv_title_win_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_title_match_num"
        android:gravity="center"
        android:text="赛"
        android:textColor="@color/white"/>
</RelativeLayout>